<div class="text-center mb-5">
  <p>
    <img class="rounded" src=<%= "/characters/#{@character.image}" %> alt="Character" width="160px" height="160px">
  </p>
  <h1 class="h4 font-weight-bold"><%= @character.name %></h1>
  <% if login? %>
    <p class="font-weight-bold h4 mb-3">Lv.<%= @level %></p>
  <% end %>
  <p class="mt-5"><%= link_to '撃破数登録', "/characters/#{@character.id}/score", class: 'btn btn-lg btn-primary' %></p>
  <div class="row mt-5">
    <table class="offset-lg-3 col-lg-6 table table-bordered">
      <tr>
        <th>ステージ</th>
        <th>合計</th>
        <th>最高</th>
      </tr>
      <% @scores.each do |score| %>
        <tr>
          <th><%= score.stage.name %></th>
          <td><%= score.total_point %></td>
          <td><%= score.max_point %></td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
